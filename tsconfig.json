{
  "compilerOptions": {
    // 允许编译javascript文件，可以引入js文件
    "allowJs": true,
    // 允许从没有设置默认导出的模块中默认导入
    "esModuleInterop": true,
    // 在 .tsx文件里支持JSX
    "jsx": "react",
    "baseUrl": ".",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    // 解析webpack alias
    "paths": {
      // 配置后可点击快速进入对应文件
      "@/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}